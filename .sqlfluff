[sqlfluff]
dialect = postgres          # or bigquery, snowflake, etc.
templater = dbt
exclude_rules = L009,L031   # ignore overly long line & alias case
max_line_length = 120

[sqlfluff:rules:L010]       # capitalisation of keywords
capitalisation_policy = upper

[sqlfluff:rules]
tab_space_size = 4

[sqlfluff:templater:dbt]
project_dir = .                # path to dbt_project.yml